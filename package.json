{
  "name": "spot-the-difference",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "tsc -b && bunx --bun vite build && bun run ssg",
    "lint": "biome check --write src tests",
    "lint:check": "biome check src tests",
    "preview": "bunx --bun vite preview",
    "prepare": "husky",
    "ssg": "bun run src/scripts/generate-static-pages.ts",
    "test": "bun run test:ssg && bun run test:playwright",
    "test:ssg": "bun test ./tests/ssg.test.ts",
    "test:playwright": "playwright test",
    "playwright:codegen": "playwright codegen",
    "postinstall": "bunx biome migrate --write"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "@playwright/test": "^1.55.1",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "dexie-react-hooks": "^4.2.0",
    "firebase": "^11.10.0",
    "husky": "^9.1.7",
    "js-confetti": "^0.13.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.3",
    "react-timer-hook": "^4.0.5",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "^1.2.23",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "typescript": "~5.9.3",
    "vite": "^6.3.5"
  }
}
