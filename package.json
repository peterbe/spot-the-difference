{
  "name": "spot-the-difference",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "tsc -b && bunx --bun vite build && bun run ssg",
    "lint": "biome check --write src tests",
    "lint:check": "biome check src tests",
    "preview": "bunx --bun vite preview",
    "prepare": "husky",
    "ssg": "bun run src/scripts/generate-static-pages.ts",
    "test": "bun run test:ssg && bun run test:playwright",
    "test:ssg": "bun test ./tests/ssg.test.ts",
    "test:playwright": "playwright test",
    "playwright:codegen": "playwright codegen"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "@playwright/test": "^1.52.0",
    "cheerio": "^1.0.0",
    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "firebase": "^11.8.1",
    "husky": "^9.1.7",
    "js-confetti": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.1",
    "react-timer-hook": "^4.0.5",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.15",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "globals": "^15.15.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
